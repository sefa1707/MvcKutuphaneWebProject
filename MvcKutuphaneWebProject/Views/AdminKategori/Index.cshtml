@using MvcKutuphaneWebProject.Models.Entity
@model List<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Kategori</h1>

                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategori</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Kategori Listesi</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Ad</th>
                                <th>Kategori Durum</th>
                                <th>Kategori Eklenme Tarihi</th>
                                <th width="100px">Detay</th>
                                <th width="100px">Düzenle</th>
                                <th width="100px">Aktif</th>
                                <th width="100px">Pasif</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.KategoriID</td>
                                    <td>@item.KategoriAd</td>
                                    <td>@item.KategoriDurum</td>
                                    <td>@Convert.ToDateTime(item.KategoriEklenmeTarih).ToString("dd/MMM/yyyy")</td>
                                    <td align="center"><a class="btn btn-info" href="#"><i class="fas fa-eye"></i>&nbsp;Detay</a></td>
                                    <td align="center"><a class="btn btn-warning" href="/AdminKategori/KategoriGetir/@item.KategoriID/"><i class="fas fa-pencil-alt"></i>&nbsp;Düzenle</a></td>
                                    <td align="center"><a class="btn btn-success" href="/AdminKategori/KategoriAktifYap/@item.KategoriID/"><i class="fas fa-plus-circle"></i>&nbsp;Aktif</a></td>
                                    <td align="center"><a class="btn btn-danger" href="/AdminKategori/KategoriPasifYap/@item.KategoriID/"><i class="fas fa-minus-circle"></i>&nbsp;Pasif</a></td>

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Ad</th>
                                <th>Kategori Durum</th>
                                <th>Kategori Eklenme Tarihi</th>
                                <th>Detay</th>
                                <th>Düzenle</th>
                                <th>Aktif</th>
                                <th>Pasif</th>
                            </tr>
                        </tfoot>
                    </table>
                    <br />
                    <a href="/AdminKategori/KategoriEkle/" class="btn btn-info"><i class="fas fa-folder-plus"></i>&nbsp;Yeni Kategori Ekle</a>
                </div>
          
                <!-- /.card-body -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
        
    </section>
    <!-- /.content -->
</div>

